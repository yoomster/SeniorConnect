@page "/Users"

@model SeniorConnect.WebApp.Pages.UserPages.AllUsersModel

@{
    ViewData["Title"] = "All Users";
}

<h1>@ViewData["Title"]</h1>

 
@if (Model.AllUsers != null && Model.AllUsers.Count > 0)
 {
     <table class="table">
         <thead>
             <tr>
                 <th>ID</th>
                 <th>First Name</th>
                 <th>Last Name</th>
             </tr>
         </thead>
         <tbody>
            @foreach (var user in Model.AllUsers)
             {

                 <tr>
                     <td>@user.Id</td>
                     <td>@user.FirstName</td>
                     <td>@user.LastName</td>
                 </tr>
             }
         </tbody>
     </table>
 } 
 else
 {
     <p>No users found.</p>
 }
